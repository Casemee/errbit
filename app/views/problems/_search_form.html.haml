%section
  = search_form_for q, url: url do |f|
    %div
      = f.label :search
      = f.search_field :error_class_or_where_or_message_or_app_name_or_environment_cont,
                       placeholder: 'Search for issues',
                       value: q.error_class_or_where_or_message_or_app_name_or_environment_cont
    %div
      = f.label :state
      = f.select :state_eq, states(Problem), include_blank: true, selected: q.state_eq
    %div
      = f.label :environment
      = f.select :environment_eq, environments, include_blank: true, selected: q.environment_eq
    = f.submit
%br
