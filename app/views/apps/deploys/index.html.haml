- content_for :title, 'Deploys'
- content_for :head do
  = auto_discovery_link_tag :atom, app_deploys_path(resource_app, format: "atom", auth_token: current_user.authentication_token), title: "Deploys for #{resource_app.name}"

- content_for :action_bar do
  - if current_user.authentication_token
    %span= link_to 'iCal', app_deploys_path(resource_app, :format => "ics", :auth_token => current_user.authentication_token), :class => "calendar_link"
    %span= link_to 'atom feed', app_deploys_path(resource_app, :format => "atom", :auth_token => current_user.authentication_token)
= render 'table', :deploys => @deploys
= paginate @deploys

